<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        <style name="Theme.GiveAwayThings_GoodDeeds" parent="android:Theme.Material.Light.NoActionBar" />
    -->

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:typeface">normal</item>
        <item name="background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="BaseTheme.AppTheme">
        <!--Do nothing here-->
    </style>

    <style name="BaseTheme.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="BaseTheme.AppTheme.Splash">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#0C154C</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:background">@drawable/splash</item>-->
    </style>

    <style name="Theme.GiveAwayThings_GoodDeeds" parent="Theme.AppCompat" />

    <style name="BaseTheme.AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:lines">2</item>-->
    </style>

    <style name="BaseTheme.AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTextView">
        <item name="android:lines">1</item>
        <item name="android:layout_width">@dimen/DP0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTextView.Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTextView.Normal">

    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">@dimen/DP0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>

    <style name="Widget.MyApp.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Chip.Choice</item>
    </style>

    <style name="ThemeOverlay.MyApp.Chip.Choice" parent="">
        <item name="elevationOverlayEnabled">false</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:padding">@dimen/DP14</item>
        <item name="android:layout_width">@dimen/DP0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppButton.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/DP16</item>
    </style>

    <style name="NarrowDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">25%</item>
        <item name="android:windowMinWidthMinor">25%</item>
    </style>
</resources>