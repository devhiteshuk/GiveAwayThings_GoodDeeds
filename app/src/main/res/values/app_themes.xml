<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Main">
        <!--Do nothing here-->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="materialButtonStyle">@style/BaseTheme.Button</item>
        <item name="materialButtonOutlinedStyle">@style/BaseTheme.Button.OutlinedButton</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@drawable/launcher_background</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTextView">
        <item name="android:layout_width">@dimen/DP0</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTextView.Title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">@dimen/DP0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
    </style>
</resources>